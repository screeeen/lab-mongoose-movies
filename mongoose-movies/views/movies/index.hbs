<h1>Movies</h1>

{{#each allTheMovies}}
<p class='celebrities-title'>
    {{!-- <a href="/celebrities/edit?_id={{this._id}}" class="edit-button">EDIT</a> --}}
    <a href="/movies/show/{{this._id}}">{{this.title}}</a>
    <a href="/movies/show/{{this._id}}">{{this.genre}}</a>
    <a href="/movies/show/{{this._id}}">{{this.plot}}</a>
    
    <form action="/movies/{{this._id}}/delete" method="post">
        <button class="button" type="submit">DELETE</button>
    </form>
    <form action="/movies/{{this._id}}/edit">
        <button class="button" type="submit">EDIT {{this.name}}</button>
    </form>
</p>
{{/each}}
